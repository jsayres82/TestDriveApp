@model IEnumerable<TestDriveApp.Models.Vehicle>
@{
    ViewBag.Title = "Index";
}

<h2>Vehicles</h2>

<table id="vehicles" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Make</th>
            <th>Model</th>
            <th>Year</th>
            <th>Transmission</th>
            <th>OwnerId</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

@section scripts
{
    <script>
        $(document)
            .ready(function () {
                $("#vehicles")
                    .DataTable({
                        ajax: {
                            url: '@Url.Action("getvehicles", "vehicles")',
                            contentType: 'application/json; charset=utf-8'
                        },
                        columns: [
                            {
                                data: "Make"
                            },
                            {
                                data: "Model"
                            },
                            {
                                data: "Year"
                            },
                            {
                                data: "Transmission"
                            },
                            {
                                data: "OwnerId"
                            }
                        ]
                    });
            });
    </script>
}


